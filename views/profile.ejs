<% include ./partials/header %>


<div class="container">
<div class="row">
  <h1 class="text-center">Edit <%= currentUser.username %></h1>
  <div style="width: 30%; margin: 25px auto">
    <h2>User Profile for <%=user.username%></h2>

    <form class="" action="/profile/<%= currentUser._id%>?_method=PUT" method="POST">

      <div class="form-group">
        <label for="">First Name</label>
        <input class="form-control" type="text" value="<%=user.firstname%>" name="user[firstname]">
      </div>

      <div class="form-group">
        <label for="">Last Name</label>
        <input class="form-control" type="text" value="<%=user.lastname%>" name="user[lastname]">
      </div>

      <div class="form-group">
        <label for="">City</label>
        <input class="form-control" type="text" value="<%=user.city%>" name="user[city]">
      </div>

      <div class="form-group">
        <label for="">State</label>
        <input class="form-control" type="text" value="<%=user.state%>" name="user[state]">
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" >Submit!</button>
      </div>

    </form>
    <a href="/">Go Back</a>
  </div>
</div>
</div>


<% include ./partials/footer %>
